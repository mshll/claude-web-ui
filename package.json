{
  "name": "claude-web-ui",
  "version": "0.3.1",
  "description": "Web UI for browsing and interacting with Claude Code sessions",
  "type": "module",
  "bin": {
    "claude-web-ui": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:server\"",
    "dev:server": "tsx watch api/index.ts --dev",
    "dev:web": "vite --config web/vite.config.ts",
    "build": "pnpm build:server && pnpm build:web",
    "build:web": "vite build --config web/vite.config.ts",
    "build:server": "tsup api/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "postinstall": "node -e \"const fs = require('fs'), path = require('path'); const helper = path.join(__dirname, 'node_modules/node-pty/prebuilds', process.platform + '-' + process.arch, 'spawn-helper'); try { fs.chmodSync(helper, 0o755); console.log('Fixed spawn-helper permissions'); } catch(e) { if (e.code !== 'ENOENT') console.error('Failed to fix spawn-helper permissions:', e.message); }\""
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@tanstack/react-virtual": "^3.13.18",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "diff": "^8.0.3",
    "hono": "^4.11.4",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "open": "^11.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "conversation",
    "viewer",
    "streaming",
    "ai",
    "anthropic"
  ],
  "author": "mshll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshll/claude-web-ui.git"
  },
  "homepage": "https://github.com/mshll/claude-web-ui#readme",
  "bugs": {
    "url": "https://github.com/mshll/claude-web-ui/issues"
  }
}
