{
  "name": "claude-run",
  "version": "0.2.2",
  "description": "A beautiful web UI for browsing Claude Code conversation history",
  "type": "module",
  "bin": {
    "claude-run": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:server\"",
    "dev:server": "tsx watch api/index.ts --dev",
    "dev:web": "vite --config web/vite.config.ts",
    "build": "pnpm build:server && pnpm build:web",
    "build:web": "vite build --config web/vite.config.ts",
    "build:server": "tsup api/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@tanstack/react-virtual": "^3.13.14",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "diff": "^8.0.2",
    "hono": "^4.7.8",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "open": "^10.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.0.7",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "conversation",
    "viewer",
    "streaming",
    "ai",
    "anthropic"
  ],
  "author": "Kamran Ahmed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamranahmedse/claude-run.git"
  },
  "homepage": "https://github.com/kamranahmedse/claude-run#readme",
  "bugs": {
    "url": "https://github.com/kamranahmedse/claude-run/issues"
  }
}
